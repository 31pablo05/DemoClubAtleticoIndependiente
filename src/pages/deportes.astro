<style>
  @import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Barlow+Condensed:wght@400;600;700&family=Barlow:wght@300;400;500&display=swap');

  :root {
    --red:    #D42B2B;
    --red-2:  #B01E1E;
    --black:  #0A0A0A;
    --surface:#111111;
    --card:   #141414;
    --border: rgba(212,43,43,0.12);
    --white:  #F5F5F5;
  }

  .section-label {
    font-family: 'Barlow Condensed', sans-serif;
    font-size: 0.7rem; font-weight: 700;
    letter-spacing: 0.35em; text-transform: uppercase;
    color: var(--red);
  }
  .display-title { font-family: 'Bebas Neue', sans-serif; letter-spacing: 0.05em; }
  .body-text     { font-family: 'Barlow', sans-serif; }

  .grid-bg {
    background-image:
      linear-gradient(rgba(212,43,43,0.025) 1px, transparent 1px),
      linear-gradient(90deg, rgba(212,43,43,0.025) 1px, transparent 1px);
    background-size: 52px 52px;
  }
  .noise::after {
    content: '';
    position: absolute; inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.03'/%3E%3C/svg%3E");
    pointer-events: none; z-index: 0;
  }

  .reveal {
    opacity: 0; transform: translateY(24px);
    transition: opacity 0.65s ease, transform 0.65s ease;
  }
  .reveal.visible { opacity: 1; transform: translateY(0); }
  .reveal-delay-1 { transition-delay: 0.08s; }
  .reveal-delay-2 { transition-delay: 0.16s; }
  .reveal-delay-3 { transition-delay: 0.24s; }
  .reveal-delay-4 { transition-delay: 0.32s; }

  /* â”€â”€ Ticker â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .ticker-wrap { background:var(--red); overflow:hidden; padding:0.55rem 0; }
  .ticker-track { display:flex; width:max-content; animation:ticker 26s linear infinite; }
  .ticker-item {
    font-family:'Bebas Neue',sans-serif; font-size:1rem;
    letter-spacing:0.15em; color:rgba(255,255,255,0.9);
    padding:0 2rem; white-space:nowrap;
  }
  .ticker-item::before { content:'â—†'; margin-right:2rem; opacity:0.5; }
  @keyframes ticker { from{transform:translateX(0)} to{transform:translateX(-50%)} }

  /* â”€â”€ Stats bar â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .stats-bar {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    background: var(--card);
    border-bottom: 1px solid var(--border);
  }
  .stat-cell {
    padding: 1.6rem 1rem;
    text-align: center;
    border-right: 1px solid var(--border);
    position: relative;
    transition: background 0.25s;
  }
  .stat-cell:last-child { border-right: none; }
  .stat-cell:hover { background: rgba(212,43,43,0.04); }
  .stat-cell::before {
    content: ''; position: absolute;
    top: 0; left: 0; right: 0; height: 2px;
    background: var(--red);
    transform: scaleX(0); transition: transform 0.3s ease;
  }
  .stat-cell:hover::before { transform: scaleX(1); }
  .stat-num {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(2.2rem, 4vw, 3.2rem);
    color: var(--white); line-height: 1;
  }
  .stat-num .accent { color: var(--red); }
  .stat-lbl {
    font-family: 'Barlow Condensed', sans-serif;
    font-size: 0.62rem; font-weight: 700;
    letter-spacing: 0.28em; text-transform: uppercase;
    color: rgba(255,255,255,0.25); margin-top: 0.3rem;
  }

  /* â”€â”€ Sports list â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .sports-section {
    position: relative;
    background: var(--black);
    padding: 5rem 0 6rem;
  }

  /* Thin numbered divider between cards */
  .sport-entry {
    position: relative;
    padding-bottom: 3rem;
    margin-bottom: 3rem;
    border-bottom: 1px solid rgba(255,255,255,0.04);
  }
  .sport-entry:last-child { border-bottom: none; padding-bottom: 0; margin-bottom: 0; }

  .sport-index {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 0.75rem; letter-spacing: 0.2em;
    color: var(--red); opacity: 0.5;
    margin-bottom: 0.75rem;
    display: flex; align-items: center; gap: 0.6rem;
  }
  .sport-index::after {
    content: ''; flex: 1; height: 1px;
    background: linear-gradient(90deg, var(--border), transparent);
    max-width: 6rem;
  }

  /* â”€â”€ Inscription section â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .inscription-section {
    position: relative;
    background: var(--surface);
    padding: 5.5rem 0;
  }

  /* step cards */
  .step-card {
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: 3px;
    padding: 2rem 1.8rem;
    text-align: center;
    position: relative;
    overflow: hidden;
    transition: border-color 0.3s, transform 0.3s;
  }
  .step-card:hover { border-color: rgba(212,43,43,0.45); transform: translateY(-5px); }
  .step-card::after {
    content: ''; position: absolute;
    bottom: 0; left: 0; right: 0; height: 2px;
    background: var(--red);
    transform: scaleX(0); transform-origin: left;
    transition: transform 0.35s ease;
  }
  .step-card:hover::after { transform: scaleX(1); }

  .step-num {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 5rem; letter-spacing: 0.04em;
    color: rgba(212,43,43,0.08); line-height: 1;
    position: absolute; top: 0.5rem; right: 0.8rem;
    transition: color 0.3s;
    pointer-events: none;
  }
  .step-card:hover .step-num { color: rgba(212,43,43,0.15); }

  .step-icon {
    font-size: 2.2rem;
    margin-bottom: 1rem;
    position: relative; z-index: 2;
    filter: drop-shadow(0 4px 8px rgba(0,0,0,0.5));
    display: block;
  }
  .step-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.4rem; letter-spacing: 0.06em;
    color: white; margin-bottom: 0.6rem;
  }
  .step-desc {
    font-family: 'Barlow', sans-serif;
    font-size: 0.82rem; color: rgba(255,255,255,0.4); line-height: 1.6;
  }
  /* connector line between steps */
  .steps-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  @media (min-width: 768px) {
    .steps-grid { grid-template-columns: repeat(3,1fr); gap: 0; }
    .step-card:not(:last-child)::before {
      content: 'â†’';
      font-family: 'Bebas Neue', sans-serif;
      font-size: 1.5rem;
      color: var(--red);
      position: absolute;
      right: -0.8rem; top: 50%;
      transform: translateY(-50%);
      z-index: 3;
    }
  }

  /* requirements */
  .req-block {
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: 3px;
    padding: 2rem 2.4rem;
    position: relative; overflow: hidden;
    margin-top: 1.5rem;
  }
  .req-block::before {
    content: ''; position: absolute;
    top: 0; left: 0; right: 0; height: 2px;
    background: var(--red);
  }
  .req-item {
    display: flex; align-items: flex-start; gap: 0.7rem;
    font-family: 'Barlow', sans-serif;
    font-size: 0.85rem; color: rgba(255,255,255,0.5);
    padding: 0.65rem 0;
    border-bottom: 1px solid rgba(255,255,255,0.04);
    line-height: 1.5; transition: color 0.2s;
  }
  .req-item:last-child { border-bottom: none; }
  .req-item:hover { color: rgba(255,255,255,0.8); }
  .req-dot {
    width: 5px; height: 5px; border-radius: 50%;
    background: var(--red); margin-top: 0.5rem;
    flex-shrink: 0; box-shadow: 0 0 5px var(--red);
  }

  /* â”€â”€ HERO CAROUSEL â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .sports-hero {
    position: relative;
    min-height: 100svh;
    display: flex;
    align-items: center;
    background: #080808;
    overflow: hidden;
  }
  @media (max-width: 767px) {
    .sports-hero {
      min-height: auto;
      align-items: flex-start;
    }
  }

  /* background grid */
  .sh-grid {
    position: absolute; inset: 0;
    background-image:
      linear-gradient(rgba(212,43,43,0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(212,43,43,0.03) 1px, transparent 1px);
    background-size: 60px 60px;
  }
  /* noise */
  .sh-noise {
    position: absolute; inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.03'/%3E%3C/svg%3E");
    pointer-events: none; z-index: 1;
  }
  /* glow orbs */
  .sh-orb {
    position: absolute; border-radius: 50%;
    background: var(--red); filter: blur(90px); pointer-events: none;
  }
  .sh-orb-1 { width: 40vw; height: 40vw; top: -10%; left: -10%; opacity: 0.06; }
  .sh-orb-2 { width: 30vw; height: 30vw; bottom: -8%; right: -5%; opacity: 0.05; }

  /* layout: text left, carousel right */
  .sh-inner {
    position: relative; z-index: 10;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    width: 100%;
    padding: 10rem 6vw 6rem;
  }
  @media (max-width: 900px) {
    .sh-inner {
      grid-template-columns: 1fr;
      padding: 8rem 1.5rem 4rem;
      gap: 2.5rem;
    }
  }
  @media (max-width: 767px) {
    .sh-inner {
      padding: 5.5rem 1.2rem 3rem;
      gap: 0;
    }
    .sh-carousel {
      order: 1;
    }
    .sh-text {
      order: 2;
      padding-top: 2rem;
    }
  }

  /* â”€ Text side â”€ */
  .sh-label {
    font-family: 'Barlow Condensed', sans-serif;
    font-size: 0.7rem; font-weight: 700;
    letter-spacing: 0.4em; text-transform: uppercase;
    color: var(--red);
    display: flex; align-items: center; gap: 0.7rem;
    margin-bottom: 1.2rem;
  }
  .sh-label::before { content: ''; width: 2.5rem; height: 2px; background: var(--red); }

  .sh-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(3.5rem, 8vw, 7.5rem);
    line-height: 0.95; letter-spacing: 0.03em;
    color: #f5f5f5;
    margin-bottom: 1.5rem;
  }
  .sh-title .red { color: var(--red); display: block; }

  .sh-desc {
    font-family: 'Barlow', sans-serif;
    font-size: 0.9rem; line-height: 1.75;
    color: rgba(255,255,255,0.38);
    max-width: 36ch;
    margin-bottom: 2.5rem;
  }

  /* active sport badge */
  .sh-sport-badge {
    display: inline-flex; align-items: center; gap: 0.6rem;
    background: rgba(212,43,43,0.1);
    border: 1px solid rgba(212,43,43,0.25);
    border-radius: 2px;
    padding: 0.5rem 1.2rem;
    font-family: 'Barlow Condensed', sans-serif;
    font-size: 0.9rem; font-weight: 700; letter-spacing: 0.08em;
    text-transform: uppercase; color: var(--red);
    transition: all 0.4s ease;
    margin-bottom: 2rem;
  }
  .sh-sport-badge .badge-icon { font-size: 1.1rem; }

  /* progress dots */
  .sh-dots {
    display: flex; gap: 0.5rem; align-items: center;
    margin-bottom: 2.5rem;
    flex-wrap: wrap;
  }
  .sh-dot {
    width: 6px; height: 6px; border-radius: 50%;
    background: rgba(255,255,255,0.2);
    transition: all 0.4s ease;
    cursor: pointer;
  }
  .sh-dot.active {
    background: var(--red);
    width: 24px; border-radius: 3px;
    box-shadow: 0 0 8px var(--red);
  }
  @media (max-width: 767px) {
    .sh-dots { gap: 0.35rem; margin-bottom: 1.5rem; }
    .sh-dot { width: 5px; height: 5px; }
    .sh-dot.active { width: 18px; }
    .sh-desc { margin-bottom: 1.5rem; }
    .sh-sport-badge { margin-bottom: 1.2rem; }
    .sh-title { font-size: clamp(2.8rem, 11vw, 4.5rem); margin-bottom: 1rem; }
  }

  /* progress bar */
  .sh-progress {
    height: 1px;
    background: rgba(255,255,255,0.06);
    margin-bottom: 2.5rem;
    position: relative; overflow: hidden;
    max-width: 200px;
  }
  .sh-progress-fill {
    position: absolute; top: 0; left: 0; height: 100%;
    background: var(--red);
    width: 0%;
    transition: width 0.1s linear;
  }
  .sh-progress-fill.animating {
    transition: width 4s linear;
    width: 100%;
  }

  /* counter */
  .sh-counter {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 0.85rem; letter-spacing: 0.18em;
    color: rgba(255,255,255,0.2);
  }
  .sh-counter span { color: var(--red); }

  /* â”€ Carousel â”€ */
  .sh-carousel {
    perspective: 1200px;
    position: relative;
    height: clamp(480px, 75vh, 760px);
  }
  @media (max-width: 767px) {
    .sh-carousel {
      height: clamp(280px, 62vw, 420px);
    }
  }

  .sh-card {
    position: absolute; inset: 0;
    border-radius: 4px; overflow: hidden;
    border: 1px solid rgba(212,43,43,0.15);
    transform-style: preserve-3d;
    backface-visibility: hidden;
    /* default: hidden behind */
    opacity: 0;
    transform: rotateY(90deg) scale(0.85);
    transition:
      transform 0.75s cubic-bezier(0.4, 0, 0.2, 1),
      opacity   0.75s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
  }

  /* entering from right */
  .sh-card.enter-right {
    opacity: 0;
    transform: rotateY(25deg) translateX(60px) scale(0.9);
  }
  /* entering from left */
  .sh-card.enter-left {
    opacity: 0;
    transform: rotateY(-25deg) translateX(-60px) scale(0.9);
  }
  /* active / visible */
  .sh-card.active {
    opacity: 1;
    transform: rotateY(0deg) translateX(0) scale(1);
    pointer-events: auto;
  }
  /* exiting to left */
  .sh-card.exit-left {
    opacity: 0;
    transform: rotateY(-25deg) translateX(-60px) scale(0.9);
  }
  /* exiting to right */
  .sh-card.exit-right {
    opacity: 0;
    transform: rotateY(25deg) translateX(60px) scale(0.9);
  }

  .sh-card img {
    width: 100%; height: 100%;
    object-fit: cover;
    object-position: center top;
    filter: brightness(0.75);
    transition: filter 0.4s, transform 0.6s;
  }
  .sh-card.active img { filter: brightness(0.85); }

  /* gradient overlay */
  .sh-card-overlay {
    position: absolute; inset: 0;
    background:
      linear-gradient(to top, rgba(8,8,8,0.9) 0%, rgba(8,8,8,0.2) 50%, transparent 100%),
      linear-gradient(to right, rgba(8,8,8,0.3) 0%, transparent 40%);
    pointer-events: none;
  }

  /* card label */
  .sh-card-label {
    position: absolute; bottom: 1.5rem; left: 1.5rem;
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2.2rem; letter-spacing: 0.06em;
    color: white;
    text-shadow: 0 2px 20px rgba(0,0,0,0.8);
    line-height: 1;
  }
  .sh-card-label-sub {
    font-family: 'Barlow Condensed', sans-serif;
    font-size: 0.6rem; font-weight: 700;
    letter-spacing: 0.3em; text-transform: uppercase;
    color: rgba(255,255,255,0.45);
    margin-bottom: 0.3rem;
  }

  /* red corner accent on active card */
  .sh-card-corner {
    position: absolute; top: 0; right: 0;
    width: 0; height: 0;
    border-style: solid;
    border-width: 0 56px 56px 0;
    border-color: transparent var(--red) transparent transparent;
    opacity: 0.7;
  }

  /* nav arrows */
  .sh-arrows {
    position: absolute; bottom: 1.5rem; right: 1.5rem;
    display: flex; gap: 0.5rem; z-index: 5;
  }
  .sh-arrow {
    width: 38px; height: 38px;
    border-radius: 2px;
    background: rgba(0,0,0,0.5);
    border: 1px solid rgba(212,43,43,0.3);
    color: white;
    display: flex; align-items: center; justify-content: center;
    cursor: pointer;
    transition: background 0.2s, border-color 0.2s, transform 0.15s;
    backdrop-filter: blur(8px);
  }
  .sh-arrow:hover {
    background: var(--red);
    border-color: var(--red);
    transform: scale(1.08);
  }

  /* scroll hint */
  .sh-scroll {
    position: absolute; bottom: 2rem; left: 50%;
    transform: translateX(-50%);
    display: flex; flex-direction: column; align-items: center; gap: 0.4rem;
    z-index: 10;
  }
  .sh-scroll-label {
    font-family: 'Barlow Condensed', sans-serif;
    font-size: 0.58rem; font-weight: 700;
    letter-spacing: 0.32em; text-transform: uppercase;
    color: rgba(255,255,255,0.2);
  }
  .sh-scroll-line {
    width: 1px; height: 40px;
    background: linear-gradient(to bottom, var(--red), transparent);
    animation: scrollLine 2s ease-in-out infinite;
  }
  @keyframes scrollLine {
    0%,100% { opacity:1; transform:scaleY(1); }
    50% { opacity:0.3; transform:scaleY(0.5); }
  }

  /* red top border */
  .sh-top-line {
    position: absolute; top: 0; left: 0; right: 0;
