  ];

  let current = 0;
  let autoTimer = null;
  let direction = 'next'; // 'next' | 'prev'

  function goTo(next, dir = 'next') {
    if (next === current) return;
    direction = dir;

    const prev = current;
    current = (next + total) % total;

    // remove any leftover classes
    slides[prev].classList.remove('active','enter-right','enter-left');
    slides[current].classList.remove('active','enter-right','enter-left','exit-left','exit-right');

    // exit current
    slides[prev].classList.add(dir === 'next' ? 'exit-left' : 'exit-right');

    // place incoming card off-screen
    slides[current].classList.add(dir === 'next' ? 'enter-right' : 'enter-left');

    // force reflow so transition fires
    void slides[current].offsetWidth;

    // activate
    slides[current].classList.remove('enter-right','enter-left');
    slides[current].classList.add('active');

    // cleanup exit after transition
    setTimeout(() => {
      slides[prev].classList.remove('exit-left','exit-right');
    }, 800);

    // update UI
    dots.forEach((d,i) => d.classList.toggle('active', i === current));
    badge.textContent  = labels[current].label;
    badgeIcon.textContent = labels[current].icon;
    counter.textContent = String(current + 1).padStart(2, '0');

    // reset progress
    resetProgress();
  }

  function resetProgress() {
    progress.classList.remove('animating');
    progress.style.width = '0%';
    void progress.offsetWidth; // reflow
    progress.classList.add('animating');
  }

  function startAuto() {
    stopAuto();
    autoTimer = setInterval(() => goTo(current + 1, 'next'), 4000);
  }

  function stopAuto() {
    if (autoTimer) { clearInterval(autoTimer); autoTimer = null; }
  }

  // Init â€” make sure all slides except first are in enter-right state
  slides.forEach((s, i) => {
    if (i !== 0) {
      s.classList.remove('active');
      s.classList.add('enter-right');
    }
  });
  startAuto();

  // Arrow buttons
  document.getElementById('sh-next')?.addEventListener('click', () => {
    stopAuto(); goTo(current + 1, 'next'); startAuto();
  });
  document.getElementById('sh-prev')?.addEventListener('click', () => {
    stopAuto(); goTo(current - 1, 'prev'); startAuto();
  });

  // Dot navigation
  dots.forEach((dot, i) => {
    dot.addEventListener('click', () => {
      const dir = i > current ? 'next' : 'prev';
      stopAuto(); goTo(i, dir); startAuto();
    });
  });

  // Pause on hover
  document.getElementById('sh-carousel')?.addEventListener('mouseenter', stopAuto);
  document.getElementById('sh-carousel')?.addEventListener('mouseleave', startAuto);

  // Touch/swipe support
  let touchStartX = 0;
  document.getElementById('sh-carousel')?.addEventListener('touchstart', e => {
    touchStartX = e.touches[0].clientX;
  }, { passive: true });
  document.getElementById('sh-carousel')?.addEventListener('touchend', e => {
    const diff = touchStartX - e.changedTouches[0].clientX;
    if (Math.abs(diff) > 40) {
      stopAuto();
      goTo(diff > 0 ? current + 1 : current - 1, diff > 0 ? 'next' : 'prev');
      startAuto();
    }
  });
