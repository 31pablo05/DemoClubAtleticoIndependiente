    background: var(--red);
    overflow: hidden;
    padding: 0.55rem 0;
  }
  .brand-track {
    display: flex;
    width: max-content;
    animation: ticker 24s linear infinite;
  }
  .brand-item {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1rem;
    letter-spacing: 0.15em;
    color: white;
    padding: 0 2rem;
    white-space: nowrap;
    opacity: 0.9;
  }
