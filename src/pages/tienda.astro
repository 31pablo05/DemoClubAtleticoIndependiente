    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .shield-outer-ring {
    position: absolute;
    width: 220px; height: 220px;
    border-radius: 50%;
    border: 1px solid rgba(212,43,43,0.12);
    animation: ringPulse 4s ease-in-out infinite;
  }
  .shield-mid-ring {
    position: absolute;
    width: 170px; height: 170px;
    border-radius: 50%;
    border: 1px solid rgba(212,43,43,0.2);
    animation: ringPulse 4s ease-in-out infinite 0.7s;
  }
  .shield-inner-glow {
    position: absolute;
    width: 120px; height: 120px;
    border-radius: 50%;
    background: radial-gradient(circle, var(--red) 0%, transparent 70%);
    opacity: 0.15;
    filter: blur(20px);
    animation: glowPulse 3s ease-in-out infinite;
  }
  .shield-img {
    width: 110px; height: 110px;
    object-fit: contain;
    position: relative;
    z-index: 2;
    filter: drop-shadow(0 0 24px rgba(212,43,43,0.6));
  }
  @keyframes ringPulse {
    0%,100% { transform: scale(1); opacity:1; }
    50%      { transform: scale(1.05); opacity:0.5; }
  }
  @keyframes glowPulse {
    0%,100% { opacity:0.15; }
    50%      { opacity:0.25; }
  }

