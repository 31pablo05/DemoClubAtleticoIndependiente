---
import Layout from '../components/layout/Layout.astro';
---

<Layout 
  title="Contacto - Club Atlético Independiente de Trelew"
  description="Contactate con el Club Atlético Independiente de Trelew. Ubicación, horarios y medios de contacto."
>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Barlow+Condensed:wght@400;600;700;900&family=Barlow:wght@300;400;500&display=swap');

  :root {
    --red:     #D0021B;
    --red-glow:rgba(208,2,27,0.5);
    --red-soft:rgba(208,2,27,0.12);
    --black:   #080808;
    --dark:    #111111;
    --surface: #181818;
    --card:    #1e1e1e;
    --border:  rgba(255,255,255,0.06);
    --border-r:rgba(208,2,27,0.15);
    --text:    #E8E8E8;
    --muted:   #666;
    --green:   #22c55e;
  }

  *, *::before, *::after { box-sizing: border-box; }

  .contact-page {
    font-family: 'Barlow', sans-serif;
    background: var(--black);
    color: var(--text);
    overflow-x: hidden;
  }

  /* ── HERO ─────────────────────────────────────────────── */
  .hero {
    position: relative;
    min-height: 70vh;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    overflow: hidden;
    background: var(--black);
  }

  .hero-grid {
    position: absolute; inset: 0;
    background-image:
      linear-gradient(rgba(255,255,255,0.025) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255,255,255,0.025) 1px, transparent 1px);
    background-size: 60px 60px;
    animation: gridMove 20s linear infinite;
  }
  @keyframes gridMove {
    0%   { transform: translateY(0); }
    100% { transform: translateY(60px); }
  }

  .hero-radial {
    position: absolute; inset: 0;
    background: radial-gradient(ellipse 70% 60% at 30% 50%, rgba(208,2,27,0.18) 0%, transparent 65%);
  }

  .hero-fade {
    position: absolute; inset: 0;
    background: linear-gradient(180deg, rgba(8,8,8,0.1) 0%, rgba(8,8,8,0.7) 70%, var(--black) 100%);
  }

  .hero-ghost {
    position: absolute;
    right: -2vw; top: 50%;
    transform: translateY(-55%);
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(180px, 28vw, 380px);
    color: transparent;
    -webkit-text-stroke: 1px rgba(208,2,27,0.1);
    line-height: 1;
    user-select: none;
    letter-spacing: -0.02em;
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 10;
    padding: 0 6vw 80px;
  }

  .hero-eyebrow {
    font-family: 'Barlow Condensed', sans-serif;
    font-size: 12px; font-weight: 700;
    letter-spacing: 0.45em; text-transform: uppercase;
    color: var(--red);
    margin-bottom: 20px;
    display: flex; align-items: center; gap: 12px;
    animation: fadeUp 0.7s ease both;
  }
  .hero-eyebrow::before {
    content: ''; display: block;
    width: 36px; height: 2px;
    background: var(--red);
  }

  .hero-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(80px, 13vw, 172px);
    line-height: 0.9; letter-spacing: 0.02em;
    margin-bottom: 28px;
    animation: fadeUp 0.7s 0.08s ease both;
  }
  .hero-title strong  { display: block; color: #fff; }
  .hero-title span    {
    display: block; color: transparent;
    -webkit-text-stroke: 2px var(--red);
    text-shadow: 0 0 80px var(--red-glow);
  }

  .hero-sub {
    font-family: 'Barlow', sans-serif;
    font-size: clamp(15px, 1.6vw, 18px);
    color: var(--muted);
    max-width: 480px;
    line-height: 1.7;
    animation: fadeUp 0.7s 0.16s ease both;
  }

  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(28px); }
    to   { opacity: 1; transform: translateY(0); }
  }

  /* ── TICKER ───────────────────────────────────────────── */
  .ticker-wrap {
    background: var(--red);
    overflow: hidden;
    padding: 0.6rem 0;
    position: relative; z-index: 2;
  }
  .ticker-track {
    display: flex;
    width: max-content;
    animation: ticker 28s linear infinite;
  }
  .ticker-item {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 0.95rem; letter-spacing: 0.18em;
    color: rgba(255,255,255,0.88);
    padding: 0 2.5rem; white-space: nowrap;
  }
  .ticker-item::before { content: '◆'; margin-right: 2.5rem; opacity: 0.45; }
  @keyframes ticker {
    from { transform: translateX(0); }
    to   { transform: translateX(-50%); }
  }

  /* ── MAIN LAYOUT ──────────────────────────────────────── */
  .contact-section {
    padding: 100px 6vw;
    background: var(--black);
    position: relative;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    max-width: 1280px;
    margin: 0 auto;
  }
  @media (min-width: 1024px) {
    .contact-grid { grid-template-columns: 1fr 1fr; gap: 4rem; }
  }

  /* ── SECTION LABEL ────────────────────────────────────── */
  .sec-label {
    font-family: 'Barlow Condensed', sans-serif;
    font-size: 11px; font-weight: 700;
    letter-spacing: 0.5em; text-transform: uppercase;
    color: var(--red);
    margin-bottom: 14px;
    display: flex; align-items: center; gap: 12px;
  }
  .sec-label::before {
    content: ''; display: block;
    width: 28px; height: 1px;
    background: var(--red);
  }

  .sec-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(42px, 6vw, 80px);
    line-height: 0.95; letter-spacing: 0.02em;
    margin-bottom: 40px;
    color: #fff;
  }

  /* ── CONTACT CARDS ────────────────────────────────────── */
  .info-card {
    background: var(--card);
    border: 1px solid var(--border);
    padding: 2rem 2rem 2rem 2.5rem;
    position: relative;
    overflow: hidden;
    transition: border-color 0.3s, transform 0.3s, background 0.3s;
    cursor: default;
  }
  .info-card::before {
    content: ''; position: absolute;
    left: 0; top: 0; bottom: 0;
    width: 3px; background: var(--red);
    transform: scaleY(0); transform-origin: bottom;
    transition: transform 0.35s ease;
  }
  .info-card:hover { border-color: var(--border-r); transform: translateX(4px); background: var(--surface); }
  .info-card:hover::before { transform: scaleY(1); }

  .card-icon {
    width: 40px; height: 40px;
    background: var(--red-soft);
    border-radius: 4px;
    display: flex; align-items: center; justify-content: center;
    margin-bottom: 1.1rem;
    transition: background 0.3s;
  }
  .info-card:hover .card-icon { background: rgba(208,2,27,0.25); }

  .card-icon svg { width: 20px; height: 20px; color: var(--red); }

  .card-label {
    font-family: 'Barlow Condensed', sans-serif;
    font-size: 10px; font-weight: 700;
    letter-spacing: 0.4em; text-transform: uppercase;
    color: var(--muted); margin-bottom: 6px;
  }

  .card-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.7rem; letter-spacing: 0.05em;
    color: #fff; margin-bottom: 6px;
  }

  .card-desc {
    font-family: 'Barlow', sans-serif;
    font-size: 0.88rem; color: #888; line-height: 1.65;
  }
  .card-desc strong { color: #ccc; }

  .cards-stack { display: flex; flex-direction: column; gap: 1px; }

  /* ── WHATSAPP FEATURE CARD ────────────────────────────── */
  .wa-card {
    background: var(--surface);
    border: 1px solid rgba(34,197,94,0.2);
    padding: 2.5rem;
    position: relative; overflow: hidden;
    transition: border-color 0.3s;
  }
  .wa-card:hover { border-color: rgba(34,197,94,0.55); }
  .wa-card::after {
    content: '';
    position: absolute; bottom: 0; left: 0; right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--green), transparent);
    transform: scaleX(0);
    transition: transform 0.45s ease;
  }
  .wa-card:hover::after { transform: scaleX(1); }

  .wa-header {
    display: flex; align-items: center; gap: 1rem;
    margin-bottom: 1.4rem;
  }
  .wa-icon {
    width: 52px; height: 52px;
    background: var(--green);
    border-radius: 50%;
    display: flex; align-items: center; justify-content: center;
    flex-shrink: 0;
    box-shadow: 0 4px 20px rgba(34,197,94,0.3);
  }
  .wa-icon svg { width: 26px; height: 26px; color: #fff; }

  .wa-name {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.6rem; letter-spacing: 0.05em; color: #fff;
  }
  .wa-sub {
    font-family: 'Barlow', sans-serif;
    font-size: 0.78rem; color: #666;
    letter-spacing: 0.04em;
  }

  .wa-btn {
    display: flex; align-items: center; justify-content: center; gap: 10px;
    background: var(--green);
    color: #fff;
    padding: 1rem 2rem;
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.35rem; letter-spacing: 0.1em;
    text-decoration: none;
    transition: background 0.25s, transform 0.25s, box-shadow 0.25s;
    width: 100%;
  }
  .wa-btn:hover {
    background: #16a34a;
    transform: translateY(-2px);
    box-shadow: 0 8px 28px rgba(34,197,94,0.35);
  }

  /* ── SOCIAL ROW ───────────────────────────────────────── */
  .social-row {
    display: flex; gap: 1rem; margin-top: 1.5rem;
  }
  .soc-btn {
    width: 48px; height: 48px;
    background: var(--card); border: 1px solid var(--border);
    display: flex; align-items: center; justify-content: center;
    text-decoration: none;
    transition: background 0.25s, border-color 0.25s, transform 0.25s;
  }
  .soc-btn svg { width: 20px; height: 20px; color: #888; transition: color 0.25s; }
  .soc-btn:hover { transform: translateY(-3px); }
  .soc-btn.ig:hover { background: linear-gradient(135deg,#833ab4,#fd1d1d,#fcb045); border-color: transparent; }
  .soc-btn.fb:hover { background: #1877f2; border-color: #1877f2; }
  .soc-btn.ig:hover svg, .soc-btn.fb:hover svg { color: #fff; }

  /* ── MAP / RIGHT COLUMN ───────────────────────────────── */
  .right-col { display: flex; flex-direction: column; gap: 1.5rem; }

  .map-card {
    background: var(--card);
    border: 1px solid var(--border);
    padding: 3rem 2.5rem;
    text-align: center;
    position: relative; overflow: hidden;
    flex: 1;
    display: flex; flex-direction: column;
    align-items: center; justify-content: center;
    min-height: 340px;
    transition: border-color 0.3s;
  }
  .map-card:hover { border-color: var(--border-r); }

  .map-pin {
    font-size: 3.5rem; margin-bottom: 1.2rem;
    display: block;
    animation: float 3s ease-in-out infinite;
  }
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50%       { transform: translateY(-8px); }
  }

  .map-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2.2rem; letter-spacing: 0.06em; color: var(--red);
    margin-bottom: 0.5rem;
  }
  .map-sub {
    font-family: 'Barlow', sans-serif;
    font-size: 0.85rem; color: #666; margin-bottom: 1.8rem; line-height: 1.6;
  }
  .map-btn {
    display: inline-flex; align-items: center; gap: 8px;
    background: var(--red);
    color: #fff; text-decoration: none;
    padding: 0.8rem 2rem;
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.1rem; letter-spacing: 0.08em;
    transition: background 0.25s, transform 0.25s, box-shadow 0.25s;
  }
  .map-btn:hover {
    background: #b00018;
    transform: translateY(-2px);
    box-shadow: 0 8px 24px var(--red-glow);
  }

  .map-bg-text {
    position: absolute; bottom: -0.1em; right: 0;
    font-family: 'Bebas Neue', sans-serif;
    font-size: 10rem; letter-spacing: -0.02em;
    color: transparent;
    -webkit-text-stroke: 1px rgba(208,2,27,0.07);
    line-height: 1; pointer-events: none; user-select: none;
  }

  /* ── FAQ ──────────────────────────────────────────────── */
  .faq-section {
    padding: 100px 6vw;
    background: var(--dark);
    position: relative;
  }

  .faq-section::before {
    content: '';
    position: absolute; top: 0; left: 0; right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--red), transparent);
  }

  .faq-header {
    max-width: 1280px; margin: 0 auto 56px;
  }

  .faq-list {
    max-width: 960px; margin: 0 auto;
    display: flex; flex-direction: column; gap: 2px;
  }

  .faq-item {
    background: var(--card);
    border: 1px solid var(--border);
    overflow: hidden;
    transition: border-color 0.3s;
  }
  .faq-item.open { border-color: var(--border-r); }

  .faq-q {
    width: 100%; background: none; border: none; cursor: pointer;
    padding: 1.5rem 2rem;
    display: flex; align-items: center; justify-content: space-between; gap: 1rem;
    text-align: left;
    transition: background 0.2s;
  }
  .faq-q:hover { background: rgba(255,255,255,0.025); }

  .faq-num {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 0.85rem; letter-spacing: 0.1em;
    color: var(--red); opacity: 0.5;
    flex-shrink: 0;
  }
  .faq-q-text {
    font-family: 'Barlow Condensed', sans-serif;
    font-size: 1.05rem; font-weight: 600; letter-spacing: 0.02em;
    color: #ddd; flex: 1;
    transition: color 0.2s;
  }
  .faq-item.open .faq-q-text { color: #fff; }

  .faq-chevron {
    width: 20px; height: 20px; color: var(--muted); flex-shrink: 0;
    transition: transform 0.3s, color 0.2s;
  }
  .faq-item.open .faq-chevron { transform: rotate(180deg); color: var(--red); }

  .faq-a {
    max-height: 0; overflow: hidden;
    transition: max-height 0.4s ease, padding 0.3s;
    padding: 0 2rem 0 2rem;
  }
  .faq-item.open .faq-a {
    max-height: 200px;
    padding: 0 2rem 1.5rem;
  }
  .faq-a-inner {
    font-family: 'Barlow', sans-serif;
    font-size: 0.9rem; color: #777; line-height: 1.75;
    border-left: 2px solid var(--border-r);
    padding-left: 1rem;
  }

  /* ── REVEAL ANIMATIONS ────────────────────────────────── */
  .reveal {
    opacity: 0; transform: translateY(22px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }
  .reveal.visible { opacity: 1; transform: translateY(0); }
  .reveal-d1 { transition-delay: 0.08s; }
  .reveal-d2 { transition-delay: 0.16s; }
  .reveal-d3 { transition-delay: 0.24s; }
  .reveal-d4 { transition-delay: 0.32s; }

  /* ── Mobile responsive ────────────────────────────────── */
  @media (max-width: 767px) {
    /* Hero */
    .hero { overflow: hidden; }
    .hero-title { font-size: clamp(52px, 14vw, 172px); }
    .hero-content { padding: 0 1.25rem 52px; }
    .hero-ghost {
      font-size: clamp(120px, 30vw, 280px);
      opacity: 0.07;
      right: -4vw;
    }

    /* Contact section */
    .contact-section { padding: 52px 1.25rem; }

    /* Section title */
    .sec-title { font-size: clamp(36px, 10vw, 80px); margin-bottom: 28px; }

    /* Cards */
    .info-card { padding: 1.5rem 1.25rem 1.5rem 1.75rem; }
    .wa-card { padding: 1.75rem 1.25rem; }
    .map-card { padding: 2rem 1.25rem; min-height: 260px; }

    /* FAQ */
    .faq-section { padding: 52px 1.25rem; }
    .faq-header { margin-bottom: 32px; }
    .faq-q { padding: 1.1rem 1rem; }
    .faq-a { padding: 0 1rem 0 1rem; }
    .faq-item.open .faq-a { padding: 0 1rem 1.2rem; }
    .faq-q-text { font-size: 0.95rem; }
  }
</style>

