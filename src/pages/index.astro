---
import Layout from '../components/layout/Layout.astro';
import Hero from '../components/ui/Hero.astro';
import SportCard from '../components/ui/SportCard.astro';
import ProductCard from '../components/ui/ProductCard.astro';
import SectionTitle from '../components/ui/SectionTitle.astro';
import CtaBanner from '../components/ui/CtaBanner.astro';
import { sports } from '../data/sports';
import { products } from '../data/products';
import { weeklySchedule, sportColorMap } from '../data/schedule';

const featuredSports = sports.slice(0, 7);
const featuredProducts = products.filter(p => p.featured);
---

<Layout title="Club AtlÃ©tico Independiente de Trelew - Inicio">

  <style>
    /* â”€â”€ Fuentes â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    @import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Barlow+Condensed:wght@400;600;700&family=Barlow:wght@300;400;500&display=swap');

    /* â”€â”€ Variables â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    :root {
      --red:    #D42B2B;
      --red-2:  #B01E1E;
      --red-glow: rgba(212,43,43,0.35);
      --black:  #0A0A0A;
      --surface:#111111;
      --card:   #181818;
      --white:  #F5F5F5;
      --gray:   #888;
    }

    /* â”€â”€ Utilities â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    .section-label {
      font-family: 'Barlow Condensed', sans-serif;
      font-size: 0.75rem;
      font-weight: 700;
      letter-spacing: 0.35em;
      text-transform: uppercase;
      color: var(--red);
    }
    .display-title {
      font-family: 'Bebas Neue', sans-serif;
      letter-spacing: 0.05em;
    }
    .body-text {
      font-family: 'Barlow', sans-serif;
    }

    /* â”€â”€ Slash Divider â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    .slash-divider {
      display: inline-flex;
      align-items: center;
      gap: 1rem;
    }
    .slash-divider::before,
    .slash-divider::after {
      content: '';
      width: 3rem;
      height: 2px;
      background: var(--red);
    }

    /* â”€â”€ Noise overlay â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    .noise::after {
      content: '';
      position: absolute;
      inset: 0;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.04'/%3E%3C/svg%3E");
      pointer-events: none;
      z-index: 0;
    }

    /* â”€â”€ Number counter â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    .stat-number {
      font-family: 'Bebas Neue', sans-serif;
      font-size: clamp(3rem, 6vw, 5rem);
      line-height: 1;
      color: var(--white);
      position: relative;
    }
    .stat-number span.accent {
      color: var(--red);
    }

    /* â”€â”€ Ticker tape â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    .ticker-wrap {
      overflow: hidden;
      background: var(--red);
      padding: 0.6rem 0;
    }
    .ticker-track {
      display: flex;
      width: max-content;
      animation: ticker 28s linear infinite;
    }
    .ticker-item {
      font-family: 'Bebas Neue', sans-serif;
      font-size: 1.1rem;
      letter-spacing: 0.12em;
      color: white;
      padding: 0 2.5rem;
      white-space: nowrap;
    }
    .ticker-item::before {
      content: 'â—†';
      margin-right: 2.5rem;
      opacity: 0.6;
    }
    @keyframes ticker {
      from { transform: translateX(0); }
      to   { transform: translateX(-50%); }
    }

    /* â”€â”€ Sport Card â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    .sport-tile {
      position: relative;
      overflow: hidden;
      border-radius: 4px;
      border: 1px solid rgba(212,43,43,0.15);
      background: var(--card);
      transition: border-color 0.3s, transform 0.3s;
      cursor: pointer;
    }
    .sport-tile:hover {
      border-color: var(--red);
      transform: translateY(-4px);
    }
    .sport-tile::before {
      content: '';
      position: absolute;
      top: 0; left: 0;
      width: 3px; height: 0;
      background: var(--red);
      transition: height 0.35s ease;
    }
    .sport-tile:hover::before { height: 100%; }
    .sport-tile .tile-num {
      font-family: 'Bebas Neue', sans-serif;
      font-size: 4rem;
      color: rgba(212,43,43,0.08);
      position: absolute;
      top: -0.5rem; right: 0.5rem;
      line-height: 1;
      transition: color 0.3s;
    }
    .sport-tile:hover .tile-num { color: rgba(212,43,43,0.15); }

    /* â”€â”€ Day column â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    .day-col {
      border-radius: 4px;
      background: var(--card);
      border: 1px solid rgba(212,43,43,0.1);
      overflow: hidden;
      transition: border-color 0.3s;
    }
    .day-col:hover { border-color: rgba(212,43,43,0.5); }
    .day-head {
      font-family: 'Bebas Neue', sans-serif;
      letter-spacing: 0.08em;
      background: rgba(212,43,43,0.07);
      border-bottom: 1px solid rgba(212,43,43,0.15);
    }

    /* â”€â”€ Product card â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    .product-frame {
      position: relative;
      border-radius: 4px;
      overflow: hidden;
      background: var(--card);
      border: 1px solid rgba(212,43,43,0.1);
      transition: border-color 0.3s, transform 0.3s;
    }
    .product-frame:hover {
      border-color: var(--red);
      transform: translateY(-6px);
    }
    .product-frame .badge {
      position: absolute;
      top: 1rem; left: 1rem;
      font-family: 'Barlow Condensed', sans-serif;
      font-size: 0.7rem;
      font-weight: 700;
      letter-spacing: 0.15em;
      background: var(--red);
      color: white;
      padding: 0.2rem 0.6rem;
      clip-path: polygon(0 0, 100% 0, 95% 100%, 5% 100%);
    }

    /* â”€â”€ Value card â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    .value-card {
      position: relative;
      padding: 2.5rem 2rem;
      border-radius: 4px;
      background: var(--card);
      border: 1px solid rgba(212,43,43,0.1);
      overflow: hidden;
      transition: transform 0.3s, border-color 0.3s;
    }
    .value-card:hover {
      transform: translateY(-6px);
      border-color: rgba(212,43,43,0.6);
    }
    .value-card .corner-accent {
      position: absolute;
      bottom: 0; right: 0;
      width: 5rem; height: 5rem;
      background: var(--red);
      opacity: 0.07;
      transform: rotate(45deg) translate(30%, 30%);
      transition: opacity 0.3s;
    }
    .value-card:hover .corner-accent { opacity: 0.15; }

    /* â”€â”€ Facility â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    .facility-card {
      position: relative;
      height: 20rem;
      border-radius: 4px;
      overflow: hidden;
      background: var(--card);
      border: 1px solid rgba(212,43,43,0.1);
      transition: border-color 0.3s;
    }
    .facility-card:hover { border-color: var(--red); }
    .facility-card .fac-icon {
      font-size: 7rem;
      position: absolute;
      inset: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 0.12;
      transition: opacity 0.3s, transform 0.4s;
    }
    .facility-card:hover .fac-icon { opacity: 0.2; transform: scale(1.1); }
    .facility-card .fac-bg-img {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      opacity: 0.5;
      transition: opacity 0.35s, transform 0.5s;
    }
    .facility-card:hover .fac-bg-img {
      opacity: 0.72;
      transform: scale(1.05);
    }
    .facility-card .fac-overlay {
      position: absolute;
      inset: 0;
      background: linear-gradient(to top, rgba(0,0,0,0.92) 0%, rgba(0,0,0,0.2) 60%, transparent 100%);
    }
    .facility-card .fac-content {
      position: absolute;
      bottom: 0; left: 0; right: 0;
      padding: 2rem;
    }
    .facility-card .fac-stripe {
      position: absolute;
      top: 0; right: 0;
      width: 0.25rem;
      height: 0;
      background: var(--red);
      transition: height 0.4s ease;
    }
    .facility-card:hover .fac-stripe { height: 100%; }

    /* â”€â”€ Stats bar â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    .stats-bar {
      background: var(--surface);
      border-top: 1px solid rgba(212,43,43,0.2);
      border-bottom: 1px solid rgba(212,43,43,0.2);
    }
    .stats-divider {
      width: 1px;
      background: rgba(212,43,43,0.2);
      height: 4rem;
      margin: auto 0;
    }

    /* â”€â”€ CTA Section â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    .cta-mega {
      position: relative;
      overflow: hidden;
      background: var(--red);
    }
    .cta-mega::before {
      content: 'INDEPENDIENTE';
      font-family: 'Bebas Neue', sans-serif;
      font-size: clamp(5rem, 14vw, 12rem);
      color: rgba(0,0,0,0.12);
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      white-space: nowrap;
      pointer-events: none;
      letter-spacing: 0.05em;
    }

    /* â”€â”€ Button â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    .btn-primary {
      font-family: 'Bebas Neue', sans-serif;
      letter-spacing: 0.15em;
      font-size: 1.1rem;
      display: inline-flex;
      align-items: center;
      gap: 0.6rem;
      padding: 0.9rem 2.4rem;
      background: var(--red);
      color: white;
      border-radius: 2px;
      transition: background 0.25s, transform 0.2s, box-shadow 0.25s;
    }
    .btn-primary:hover {
      background: var(--red-2);
      transform: translateY(-2px);
      box-shadow: 0 8px 30px var(--red-glow);
    }
    .btn-outline {
      font-family: 'Bebas Neue', sans-serif;
      letter-spacing: 0.15em;
      font-size: 1.1rem;
      display: inline-flex;
      align-items: center;
      gap: 0.6rem;
      padding: 0.85rem 2.4rem;
      background: transparent;
      color: white;
      border: 1.5px solid rgba(255,255,255,0.3);
      border-radius: 2px;
      transition: border-color 0.25s, background 0.25s, transform 0.2s;
    }
    .btn-outline:hover {
      border-color: white;
      background: rgba(255,255,255,0.06);
      transform: translateY(-2px);
    }

    /* â”€â”€ Primera DivisiÃ³n section â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
    .primera-section {
      position: relative;
      background: var(--surface);
      padding: 6rem 0;
      overflow: hidden;
    }
    .primera-section .grid-bg {
      position: absolute;
      inset: 0;
      background-image:
        linear-gradient(rgba(212,43,43,0.025) 1px, transparent 1px),
        linear-gradient(90deg, rgba(212,43,43,0.025) 1px, transparent 1px);
      background-size: 52px 52px;
    }
    .primera-ghost {
      font-family: 'Bebas Neue', sans-serif;
      font-size: clamp(6rem, 18vw, 16rem);
      line-height: 1;
      letter-spacing: 0.04em;
      color: transparent;
      -webkit-text-stroke: 1px rgba(212,43,43,0.07);
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      white-space: nowrap;
      pointer-events: none;
      user-select: none;
    }
    .primera-layout {
      display: grid;
      grid-template-columns: 1fr;
      gap: 3.5rem;
      align-items: center;
    }
    @media (min-width: 1024px) {
      .primera-layout { grid-template-columns: 1fr 1fr; gap: 5rem; }
    }
    /* Media mosaic â€” video retrato + 2 fotos apiladas */
    .primera-media {
      display: grid;
      grid-template-columns: 1fr 1fr;
      grid-template-rows: 20rem 20rem;
      gap: 0.5rem;
    }
    .primera-media-main {
      grid-column: 1;
      grid-row: span 2;          /* ocupa las 2 filas = 40.5rem total */
      position: relative;
      border-radius: 3px;
      overflow: hidden;
      border: 1px solid rgba(212,43,43,0.12);
    }
    .primera-media-main video,
    .primera-media-main img {
      width: 100%; height: 100%;
      object-fit: cover;
      object-position: center top;
      filter: brightness(0.8);
      transition: filter 0.4s, transform 0.6s;
    }
    .primera-media-main:hover video,
    .primera-media-main:hover img { filter: brightness(0.95); transform: scale(1.03); }
    .primera-media-sub {
      grid-column: 2;
      position: relative;
      border-radius: 3px;
      overflow: hidden;
      border: 1px solid rgba(212,43,43,0.12);
    }
    .primera-media-sub img {
      width: 100%; height: 100%;
      object-fit: cover;
      filter: brightness(0.75);
      transition: filter 0.4s, transform 0.6s;
    }
    .primera-media-sub:hover img { filter: brightness(0.95); transform: scale(1.05); }
    /* media overlays */
    .media-overlay-grad {
      position: absolute; inset: 0;
      background: linear-gradient(to top, rgba(10,10,10,0.6) 0%, transparent 55%);
      pointer-events: none;
    }
    .media-corner-label {
      position: absolute; bottom: 0.65rem; left: 0.75rem;
      font-family: 'Barlow Condensed', sans-serif;
      font-size: 0.58rem; font-weight: 700;
      letter-spacing: 0.22em; text-transform: uppercase;
      color: rgba(255,255,255,0.55);
    }
    .media-play-icon {
      position: absolute; top: 50%; left: 50%;
      transform: translate(-50%, -50%);
      width: 52px; height: 52px;
      border-radius: 50%;
      background: rgba(212,43,43,0.85);
      display: flex; align-items: center; justify-content: center;
      backdrop-filter: blur(6px);
      transition: background 0.25s, transform 0.25s;
    }
    .primera-media-main:hover .media-play-icon {
      background: var(--red);
      transform: translate(-50%, -50%) scale(1.1);
    }
    /* Info side */
    .primera-info { position: relative; }
    .primera-eyebrow {
      display: inline-flex;
      align-items: center;
      gap: 0.6rem;
      margin-bottom: 1rem;
    }
    .eyebrow-dot {
      width: 6px; height: 6px;
      border-radius: 50%;
      background: var(--red);
      box-shadow: 0 0 8px var(--red);
      animation: dotBlink 2s ease-in-out infinite;
    }
    @keyframes dotBlink {
      0%, 100% { opacity: 1; transform: scale(1); }
      50%       { opacity: 0.4; transform: scale(0.6); }
    }
    .primera-title {
      font-family: 'Bebas Neue', sans-serif;
      font-size: clamp(3rem, 6vw, 5.5rem);
      line-height: 0.95;
      letter-spacing: 0.04em;
      color: var(--white);
      margin-bottom: 1.5rem;
    }
    .primera-title .red-line { color: var(--red); display: block; }
    .primera-desc {
      font-family: 'Barlow', sans-serif;
      font-size: 0.9rem;
      line-height: 1.75;
      color: rgba(255,255,255,0.45);
      max-width: 38ch;
      margin-bottom: 2rem;
    }
    /* News feed styles */
    .news-header-bar {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 1.25rem;
    }
    .news-live-pill {
      display: inline-flex;
      align-items: center;
      gap: 0.4rem;
      background: rgba(212,43,43,0.1);
      border: 1px solid rgba(212,43,43,0.3);
      border-radius: 2px;
      padding: 0.25rem 0.7rem;
      font-family: 'Barlow Condensed', sans-serif;
      font-size: 0.58rem; font-weight: 700;
      letter-spacing: 0.22em; text-transform: uppercase;
      color: var(--red);
    }
    .news-live-dot {
      width: 5px; height: 5px; border-radius: 50%;
      background: var(--red);
      animation: dotBlink 1.5s ease-in-out infinite;
      flex-shrink: 0;
    }
    /* Single news item */
    .news-item {
      display: flex;
      gap: 1rem;
      padding: 1rem 0;
      border-bottom: 1px solid rgba(255,255,255,0.05);
      transition: background 0.2s;
      cursor: default;
    }
    .news-item:last-child { border-bottom: none; }
    .news-item:hover .news-item-title { color: var(--red); }
    .news-item-date-col {
      flex-shrink: 0;
      width: 3rem;
      text-align: center;
      padding-top: 0.1rem;
    }
    .news-item-day {
      font-family: 'Bebas Neue', sans-serif;
      font-size: 1.6rem;
      color: var(--white);
      line-height: 1;
    }
    .news-item-month {
      font-family: 'Barlow Condensed', sans-serif;
      font-size: 0.55rem; font-weight: 700;
      letter-spacing: 0.2em; text-transform: uppercase;
      color: rgba(255,255,255,0.28);
    }
    .news-item-divider {
      width: 1px;
      background: rgba(212,43,43,0.2);
      flex-shrink: 0;
      margin: 0.1rem 0;
