      />

      <!-- Weekly Grid -->
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-7 gap-4">
        {Object.entries(weeklySchedule).map(([day, activities]) => (
          <div class="bg-club-card rounded-lg p-4 border border-club-gold border-opacity-20 hover:border-opacity-100 transition-all hover-lift">
            <h3 class="font-display text-xl text-club-gold mb-4 tracking-wider text-center border-b border-club-gold border-opacity-30 pb-2">
              {day}
            </h3>
            <div class="space-y-2">
              {activities.length > 0 ? (
                activities.slice(0, 3).map((activity, idx) => {
                  const colorClass = activity.color === 'red' ? 'bg-club-red' :
                                   activity.color === 'blue' ? 'bg-blue-600' :
                                   activity.color === 'pink' ? 'bg-pink-600' :
                                   activity.color === 'purple' ? 'bg-purple-600' :
                                   'bg-orange-600';
                  return (
                    <div
                      class={`${colorClass} text-white text-xs p-2 rounded text-center font-medium`}
                    >
                      {activity.activity}
                    </div>
                  );
                })
              ) : (
                <div class="text-gray-500 text-center text-sm py-2">
                  Descanso
                </div>
              )}
            </div>
          </div>
        ))}
      </div>

      <!-- View Full Schedule Button -->
      <div class="text-center mt-12">
        <a
          href="/cronograma"
          class="inline-block bg-club-red hover:bg-club-red-2 text-white px-8 py-4 rounded-full font-display text-xl tracking-wider transition-all hover:scale-105 hover:glow-red"
        >
          VER CRONOGRAMA COMPLETO
        </a>
      </div>
    </div>
  </section>

  <!-- Store Preview Section -->
