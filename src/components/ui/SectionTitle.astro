---
// SectionTitle.astro - Reusable section title component
interface Props {
  title: string;
  subtitle?: string;
  align?: 'left' | 'center' | 'right';
  variant?: 'default' | 'gold';
}

const { 
  title, 
  subtitle, 
  align = 'center',
  variant = 'default'
} = Astro.props;

const alignClass = {
  left: 'text-left items-start',
  center: 'text-center items-center',
  right: 'text-right items-end'
}[align];

const titleColor = variant === 'gold' ? 'text-club-gold' : 'text-white';
---

<div class={`flex flex-col ${alignClass} mb-12`}>
  <!-- Title -->
  <h2 class={`font-display text-4xl md:text-5xl lg:text-6xl ${titleColor} tracking-wider mb-4 relative inline-block`}>
    {title}
    
    <!-- Decorative Underline -->
    <div class={`h-1 bg-club-red mt-2 ${
      align === 'center' ? 'mx-auto w-24' : 
      align === 'right' ? 'ml-auto w-24' : 
      'w-24'
    }`}></div>
  </h2>

  <!-- Subtitle -->
  {subtitle && (
    <p class="text-club-gold text-lg md:text-xl font-light tracking-wide max-w-2xl mt-4">
      {subtitle}
    </p>
  )}
</div>
