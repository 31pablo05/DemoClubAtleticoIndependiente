---
// SportCard.astro - Card component for displaying sports
interface Props {
  sport: {
    id: string;
    name: string;
    icon: string;
    description: string;
    categories?: string[];
    schedule: string;
    color: string;
  };
  variant?: 'compact' | 'full';
}

const { sport, variant = 'compact' } = Astro.props;
---

{variant === 'compact' ? (
  <!-- Compact Card for grid display -->
  <article class="group relative bg-club-surface hover-lift rounded-lg overflow-hidden border-t-4 border-club-gold transition-all duration-300 hover:border-club-red hover:glow-red">
    <div class="p-6">
      <!-- Icon -->
      <div class="text-5xl mb-4 group-hover:scale-110 transition-transform duration-300">
        {sport.icon}
      </div>

      <!-- Sport Name -->
      <h3 class="font-display text-2xl text-white mb-3 tracking-wider group-hover:text-club-red transition-colors">
        {sport.name}
      </h3>

      <!-- Description -->
      <p class="text-gray-400 text-sm mb-4 line-clamp-3">
        {sport.description}
      </p>

      <!-- Schedule Preview -->
      <div class="flex items-center gap-2 text-xs text-club-gold mb-4">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <span class="line-clamp-1">{sport.schedule.split('|')[0]}</span>
      </div>

      <!-- CTA Button -->
      <a
        href="/deportes"
        class="inline-block bg-club-red hover:bg-club-red-2 text-white px-6 py-2 rounded-full text-sm font-medium transition-all hover:scale-105"
      >
        Ver horarios
      </a>
    </div>

    <!-- Decorative Corner -->
    <div class="absolute top-0 right-0 w-20 h-20 bg-club-gold opacity-5 transform rotate-45 translate-x-10 -translate-y-10"></div>
  </article>
) : (
  <!-- Full Card for detailed view -->
  <article class="bg-club-surface rounded-lg overflow-hidden border border-club-gold border-opacity-30 hover:border-opacity-100 transition-all duration-300">
    <!-- Header with Icon -->
    <div class="relative h-48 bg-gradient-to-br from-club-card to-club-surface flex items-center justify-center border-b-2 border-club-gold">
      <div class="text-8xl">
        {sport.icon}
      </div>
      <div class="absolute inset-0 bg-black opacity-20"></div>
    </div>

    <!-- Content -->
    <div class="p-8">
      <!-- Sport Name -->
      <h3 class="font-display text-4xl text-white mb-4 tracking-wider">
        {sport.name}
      </h3>

      <!-- Description -->
      <p class="text-gray-300 mb-6 leading-relaxed">
        {sport.description}
      </p>

      <!-- Categories -->
      {sport.categories && sport.categories.length > 0 && (
        <div class="mb-6">
          <h4 class="text-club-gold font-semibold mb-3 text-sm tracking-wide">CATEGORÍAS</h4>
          <div class="flex flex-wrap gap-2">
            {sport.categories.map(category => (
              <span class="bg-club-card border border-club-red border-opacity-50 text-white px-4 py-2 rounded-full text-sm">
                {category}
              </span>
            ))}
          </div>
        </div>
      )}

      <!-- Schedule -->
      <div class="mb-6">
        <h4 class="text-club-gold font-semibold mb-3 text-sm tracking-wide flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          HORARIOS
        </h4>
        <p class="text-white font-medium">{sport.schedule}</p>
      </div>

      <!-- WhatsApp CTA -->
      <a
        href="https://wa.me/542804867740"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-3 bg-club-red hover:bg-club-red-2 text-white px-8 py-3 rounded-full font-display text-lg tracking-wider transition-all hover:scale-105 hover:glow-red"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
        </svg>
        CONSULTAR INSCRIPCIÓN
      </a>
    </div>
  </article>
)}
