---
// Header.astro - Navigation header with sticky behavior
const navLinks = [
  { name: 'Inicio', href: '/' },
  { name: 'El Club', href: '/club' },
  { name: 'Deportes', href: '/deportes' },
  { name: 'Cronograma', href: '/cronograma' },
  { name: 'Tienda', href: '/tienda' },
  { name: 'Alquiler', href: '/alquiler' },
  { name: 'Contacto', href: '/contacto' }
];

const currentPath = Astro.url.pathname;
---

<header id="main-header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300">
  <nav class="container mx-auto px-4 py-4 flex items-center justify-between">
    <!-- Logo/Shield -->
    <a href="/" class="flex items-center gap-3 group">
      <div class="w-12 h-12 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
        <img src="/logo/escudoindep.png" alt="Escudo Club Atlético Independiente" class="w-full h-full object-contain drop-shadow-lg" />
      </div>
      <span class="font-display text-xl text-white hidden md:block">
        CA INDEPENDIENTE
      </span>
    </a>

    <!-- Desktop Navigation -->
    <ul class="hidden lg:flex items-center gap-8">
      {navLinks.map(link => (
        <li>
          <a 
            href={link.href}
            class={`text-sm font-medium tracking-wide transition-colors hover:text-club-red ${
              currentPath === link.href ? 'text-club-red' : 'text-white'
            }`}
          >
            {link.name}
          </a>
        </li>
      ))}
    </ul>

    <!-- WhatsApp CTA Button -->
    <a
      href="https://wa.me/542804867740"
      target="_blank"
      rel="noopener noreferrer"
      class="hidden md:flex items-center gap-2 bg-club-red hover:bg-club-red-2 text-white px-6 py-2.5 rounded-full font-medium transition-all hover:scale-105 hover:glow-red"
    >
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
      </svg>
      <span>WhatsApp</span>
    </a>

    <!-- Mobile Menu Button -->
    <button
      id="mobile-menu-btn"
      class="lg:hidden text-white p-2"
      aria-label="Abrir menú"
    >
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>
  </nav>
</header>

<!-- Mobile Menu Overlay -->
<div
  id="mobile-menu"
  class="fixed inset-0 bg-club-black z-40 transform translate-x-full transition-transform duration-300 lg:hidden"
>
  <div class="flex flex-col h-full">
    <!-- Close Button -->
    <div class="flex justify-end p-6">
      <button
        id="mobile-menu-close"
        class="text-white p-2"
        aria-label="Cerrar menú"
      >
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation Links -->
    <nav class="flex-1 flex flex-col items-center justify-center gap-8">
      {navLinks.map(link => (
        <a
          href={link.href}
          class={`font-display text-3xl tracking-wider transition-colors hover:text-club-red ${
            currentPath === link.href ? 'text-club-red' : 'text-white'
          }`}
        >
          {link.name}
        </a>
      ))}
      
      <a
        href="https://wa.me/542804867740"
        target="_blank"
        rel="noopener noreferrer"
        class="mt-8 flex items-center gap-3 bg-club-red text-white px-8 py-4 rounded-full font-display text-xl tracking-wider hover:bg-club-red-2 transition-all"
      >
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
        </svg>
        WhatsApp
      </a>
    </nav>
  </div>
</div>

<script>
  // Header scroll behavior
  const header = document.getElementById('main-header');
  
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      header?.classList.add('bg-club-black', 'backdrop-blur-lg', 'bg-opacity-95', 'border-b', 'border-club-red', 'border-opacity-30');
    } else {
      header?.classList.remove('bg-club-black', 'backdrop-blur-lg', 'bg-opacity-95', 'border-b', 'border-club-red', 'border-opacity-30');
    }
  });

  // Mobile menu
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileMenuClose = document.getElementById('mobile-menu-close');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.remove('translate-x-full');
  });

  mobileMenuClose?.addEventListener('click', () => {
    mobileMenu?.classList.add('translate-x-full');
  });

  // Close mobile menu when clicking a link
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('translate-x-full');
    });
  });
</script>
