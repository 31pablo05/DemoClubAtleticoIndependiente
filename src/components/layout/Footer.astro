<style>
  @import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Barlow+Condensed:wght@400;600;700&family=Barlow:wght@300;400;500&display=swap');

  :root {
    --red:     #D42B2B;
    --red-2:   #B01E1E;
    --black:   #0A0A0A;
    --surface: #111111;
    --card:    #141414;
    --border:  rgba(212,43,43,0.12);
    --text:    rgba(255,255,255,0.5);
  }

  /* â”€â”€ Footer base â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .footer-root {
    position: relative;
    background: var(--black);
    overflow: hidden;
    border-top: 1px solid var(--border);
  }

  /* grid BG */
  .footer-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(212,43,43,0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(212,43,43,0.03) 1px, transparent 1px);
    background-size: 48px 48px;
    pointer-events: none;
  }

  /* noise */
  .footer-noise {
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.025'/%3E%3C/svg%3E");
    pointer-events: none;
  }

  /* ambient orb */
  .footer-orb {
    position: absolute;
    width: 500px; height: 500px;
    border-radius: 50%;
    background: radial-gradient(circle, var(--red) 0%, transparent 70%);
    opacity: 0.05;
    filter: blur(60px);
    bottom: -200px; left: -100px;
    pointer-events: none;
  }
  .footer-orb-2 {
    right: -100px; left: auto; bottom: -150px;
  }

  /* â”€â”€ Big club name watermark â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .footer-watermark {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(4rem, 10vw, 9rem);
    letter-spacing: 0.06em;
    color: transparent;
    -webkit-text-stroke: 1px rgba(212,43,43,0.08);
    position: absolute;
    bottom: 4rem;
    left: 50%;
    transform: translateX(-50%);
    white-space: nowrap;
    pointer-events: none;
    user-select: none;
    z-index: 0;
  }

  /* â”€â”€ Red top accent bar â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .footer-topbar {
    height: 3px;
    background: linear-gradient(90deg, transparent 0%, var(--red) 30%, var(--red) 70%, transparent 100%);
  }

  /* â”€â”€ Shield hero block â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .shield-block {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1.5rem;
  }
  .shield-wrapper {
    position: relative;
    width: 90px; height: 90px;
  }
  .shield-ring {
    position: absolute;
    inset: -12px;
    border-radius: 50%;
    border: 1px solid rgba(212,43,43,0.2);
    animation: shieldPulse 3s ease-in-out infinite;
  }
  .shield-ring-2 {
    inset: -22px;
    border-color: rgba(212,43,43,0.08);
    animation-delay: 0.8s;
  }
  .shield-glow {
    position: absolute;
    inset: -8px;
    background: radial-gradient(circle, var(--red) 0%, transparent 70%);
    opacity: 0.12;
    border-radius: 50%;
    filter: blur(12px);
  }
  .shield-img {
    width: 90px; height: 90px;
    object-fit: contain;
    position: relative;
    z-index: 2;
    filter: drop-shadow(0 0 18px rgba(212,43,43,0.5));
  }
  @keyframes shieldPulse {
    0%, 100% { transform: scale(1); opacity: 1; }
    50%       { transform: scale(1.06); opacity: 0.6; }
  }

  .club-name-footer {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.6rem;
    letter-spacing: 0.06em;
    line-height: 1.1;
    color: white;
  }
  .club-tagline {
    font-family: 'Barlow', sans-serif;
    font-size: 0.82rem;
    color: rgba(255,255,255,0.4);
    line-height: 1.6;
    font-weight: 300;
    max-width: 220px;
  }

  /* â”€â”€ Section label â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .footer-section-label {
    font-family: 'Barlow Condensed', sans-serif;
    font-size: 0.65rem;
    font-weight: 700;
    letter-spacing: 0.35em;
    text-transform: uppercase;
    color: var(--red);
    display: flex;
    align-items: center;
    gap: 0.6rem;
    margin-bottom: 1.4rem;
  }
  .footer-section-label::after {
    content: '';
    flex: 1;
    height: 1px;
    background: var(--border);
    max-width: 3rem;
  }

  /* â”€â”€ Nav links â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .footer-nav-link {
    font-family: 'Barlow', sans-serif;
    font-size: 0.875rem;
    color: rgba(255,255,255,0.45);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: color 0.2s, gap 0.2s;
    padding: 0.2rem 0;
  }
  .footer-nav-link::before {
    content: '';
    width: 0; height: 1px;
    background: var(--red);
    transition: width 0.25s ease;
    flex-shrink: 0;
  }
  .footer-nav-link:hover {
    color: white;
    gap: 0.9rem;
  }
  .footer-nav-link:hover::before { width: 14px; }

  /* â”€â”€ Discipline pills â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
