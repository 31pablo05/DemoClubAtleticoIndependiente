<style>
  @import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Barlow+Condensed:wght@400;600;700&family=Barlow:wght@300;400;500&display=swap');

  :root {
    --red:     #D42B2B;
    --red-2:   #B01E1E;
    --black:   #0A0A0A;
    --surface: #111111;
    --card:    #141414;
    --border:  rgba(212,43,43,0.12);
    --text:    rgba(255,255,255,0.45);
  }

  /* â”€â”€ WA Buttons â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .ft-wa-btns {
    display: flex;
    flex-direction: column;
    gap: 0.45rem;
    margin-top: 0.25rem;
  }
  .ft-wa-btn {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.6rem 0.85rem;
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: 4px;
    text-decoration: none;
    color: rgba(255,255,255,0.45);
    transition: border-color 0.25s, background 0.25s, color 0.25s, transform 0.2s;
    position: relative;
    overflow: hidden;
  }
  .ft-wa-btn::before {
    content: '';
    position: absolute;
    left: 0; top: 0; bottom: 0;
    width: 3px;
    background: var(--red);
    transform: scaleY(0);
    transform-origin: bottom;
    transition: transform 0.3s ease;
  }
  .ft-wa-btn:hover {
    border-color: rgba(212,43,43,0.45);
    background: rgba(212,43,43,0.06);
    color: white;
    transform: translateX(3px);
  }
  .ft-wa-btn:hover::before { transform: scaleY(1); }
  .ft-wa-btn-icon {
    width: 30px; height: 30px;
    border-radius: 3px;
    background: rgba(212,43,43,0.1);
    border: 1px solid rgba(212,43,43,0.2);
    display: flex; align-items: center; justify-content: center;
    flex-shrink: 0;
    color: var(--red);
    transition: background 0.25s;
  }
  .ft-wa-btn:hover .ft-wa-btn-icon { background: rgba(212,43,43,0.22); }
  .ft-wa-btn-text {
    display: flex;
    flex-direction: column;
    gap: 0.1rem;
  }
  .ft-wa-btn-purpose {
    font-family: 'Barlow Condensed', sans-serif;
    font-size: 0.58rem;
    font-weight: 700;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--red);
    line-height: 1;
  }
  .ft-wa-btn-num {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1rem;
    letter-spacing: 0.08em;
    color: white;
    line-height: 1.1;
  }

  /* â”€â”€ Footer base â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .footer-root {
    position: relative;
    background: var(--black);
    overflow: hidden;
  }

  /* grid BG */
  .footer-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(212,43,43,0.028) 1px, transparent 1px),
      linear-gradient(90deg, rgba(212,43,43,0.028) 1px, transparent 1px);
    background-size: 52px 52px;
    pointer-events: none;
  }

  /* noise */
  .footer-noise {
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.025'/%3E%3C/svg%3E");
    pointer-events: none;
  }

  /* ambient orb */
  .footer-orb {
    position: absolute;
    border-radius: 50%;
    background: radial-gradient(circle, var(--red) 0%, transparent 65%);
    filter: blur(70px);
    pointer-events: none;
    opacity: 0.055;
  }

  /* â”€â”€ Watermark â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .footer-watermark {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(5rem, 14vw, 11rem);
    letter-spacing: 0.06em;
    color: transparent;
    -webkit-text-stroke: 1px rgba(212,43,43,0.055);
    position: absolute;
    bottom: 3.5rem;
    left: 50%;
    transform: translateX(-50%);
    white-space: nowrap;
    pointer-events: none;
    user-select: none;
    z-index: 0;
  }

  /* â”€â”€ Red top accent bar â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .footer-topbar {
    height: 3px;
    background: linear-gradient(90deg, transparent 0%, var(--red) 25%, var(--red) 75%, transparent 100%);
  }

  /* â”€â”€ Main layout â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .ft-inner {
    position: relative;
    z-index: 1;
    max-width: 1280px;
    margin: 0 auto;
    padding: 2.5rem 1.5rem 0;
  }

  /* Brand + columns split */
  .ft-top {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgba(255,255,255,0.05);
  }
  @media (min-width: 768px) {
    .ft-top { grid-template-columns: 240px 1fr; gap: 2.5rem; }
  }

  /* Three right columns */
  .ft-cols {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.75rem 1.5rem;
  }
  @media (min-width: 1024px) {
    .ft-cols { grid-template-columns: repeat(3, 1fr); gap: 0; }
  }

  /* Contact col spans full width on mobile, normal on desktop */
  .ft-col-contact { grid-column: span 2; }
  @media (min-width: 1024px) {
    .ft-col-contact { grid-column: span 1; }
  }

  /* â”€â”€ Brand block â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .ft-brand {
    display: flex;
    flex-direction: column;
    gap: 0.9rem;
  }

  .ft-shield-wrap {
    position: relative;
    width: 80px; height: 80px;
  }
  .ft-shield-ring {
    position: absolute;
    inset: -10px;
    border-radius: 50%;
    border: 1px solid rgba(212,43,43,0.22);
    animation: ftPulse 3s ease-in-out infinite;
  }
  .ft-shield-ring-2 {
    inset: -20px;
    border-color: rgba(212,43,43,0.08);
    animation-delay: 0.9s;
  }
  .ft-shield-glow {
    position: absolute;
    inset: -6px;
    background: radial-gradient(circle, var(--red) 0%, transparent 70%);
    opacity: 0.14;
    border-radius: 50%;
    filter: blur(10px);
  }
  .ft-shield-img {
    width: 80px; height: 80px;
    object-fit: contain;
    position: relative;
    z-index: 2;
    filter: drop-shadow(0 0 16px rgba(212,43,43,0.55));
  }
  @keyframes ftPulse {
    0%, 100% { transform: scale(1);    opacity: 1; }
    50%       { transform: scale(1.07); opacity: 0.5; }
  }

  .ft-club-name {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.5rem;
    letter-spacing: 0.06em;
    line-height: 1.1;
    color: white;
  }
  .ft-club-sub {
    width: 2rem; height: 2px;
    background: var(--red);
    margin: 0.5rem 0 0.6rem;
  }
  .ft-tagline {
    font-family: 'Barlow', sans-serif;
    font-size: 0.8rem;
    color: rgba(255,255,255,0.38);
    line-height: 1.65;
    font-weight: 300;
    max-width: 210px;
  }

  /* Social row */
  .ft-socials {
    display: flex;
    gap: 0.45rem;
    flex-wrap: wrap;
  }
  .ft-social-btn {
    width: 36px; height: 36px;
    border-radius: 3px;
    border: 1px solid var(--border);
    background: var(--card);
    display: flex; align-items: center; justify-content: center;
    color: rgba(255,255,255,0.38);
    transition: border-color 0.25s, color 0.25s, background 0.25s, transform 0.2s;
    text-decoration: none;
  }
  .ft-social-btn:hover {
    border-color: var(--red);
    color: white;
    background: rgba(212,43,43,0.1);
    transform: translateY(-3px);
  }

  /* â”€â”€ Column shared â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .ft-col {
    display: flex;
    flex-direction: column;
  }
  @media (min-width: 1024px) {
    .ft-col {
      padding: 0 2rem;
      border-right: 1px solid rgba(255,255,255,0.04);
    }
    .ft-col:first-child { padding-left: 0; }
    .ft-col:last-child  { padding-right: 0; border-right: none; }
  }

  .ft-col-label {
    font-family: 'Barlow Condensed', sans-serif;
    font-size: 0.63rem;
    font-weight: 700;
    letter-spacing: 0.38em;
    text-transform: uppercase;
    color: var(--red);
    display: flex;
    align-items: center;
    gap: 0.55rem;
    margin-bottom: 0.75rem;
  }
  .ft-col-label::after {
    content: '';
    height: 1px;
    background: var(--border);
    flex: 1;
    max-width: 3rem;
  }

  /* Nav links */
  .ft-nav-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'Barlow', sans-serif;
    font-size: 0.85rem;
    color: rgba(255,255,255,0.42);
    padding: 0.18rem 0;
    text-decoration: none;
    transition: color 0.2s, padding-left 0.2s;
  }
  .ft-nav-link::before {
    content: '';
    width: 0; height: 1px;
    background: var(--red);
    flex-shrink: 0;
    transition: width 0.25s;
  }
  .ft-nav-link:hover {
    color: white;
    padding-left: 0.3rem;
  }
  .ft-nav-link:hover::before { width: 12px; }

  /* Sport items */
  .ft-sport-item {
    display: flex;
    align-items: center;
    gap: 0.7rem;
    padding: 0.22rem 0;
    border-bottom: 1px solid rgba(255,255,255,0.04);
    font-family: 'Barlow', sans-serif;
    font-size: 0.83rem;
    color: rgba(255,255,255,0.42);
    transition: color 0.2s;
  }
  .ft-sport-item:last-child { border-bottom: none; }
  .ft-sport-item:hover { color: rgba(255,255,255,0.82); }
  .ft-sport-dot {
    width: 4px; height: 4px;
    border-radius: 50%;
    background: var(--red);
    opacity: 0.5;
    flex-shrink: 0;
    transition: opacity 0.2s;
  }
  .ft-sport-item:hover .ft-sport-dot { opacity: 1; }
  .ft-sport-emoji { font-size: 0.88rem; line-height: 1; flex-shrink: 0; }

  /* Contact items */
  .ft-contact-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    text-decoration: none;
    color: rgba(255,255,255,0.42);
    transition: color 0.2s;
    padding: 0.2rem 0;
  }
  .ft-contact-item:hover { color: rgba(255,255,255,0.85); }
  .ft-contact-icon {
    width: 32px; height: 32px;
    border-radius: 4px;
    border: 1px solid var(--border);
    background: var(--card);
    display: flex; align-items: center; justify-content: center;
    flex-shrink: 0;
    color: rgba(255,255,255,0.4);
    transition: border-color 0.25s, background 0.25s, color 0.25s;
  }
  .ft-contact-item:hover .ft-contact-icon {
    border-color: rgba(212,43,43,0.5);
    background: rgba(212,43,43,0.07);
    color: var(--red);
  }
  .ft-contact-meta {
    display: flex;
    flex-direction: column;
    gap: 0.1rem;
    padding-top: 0.1rem;
  }
  .ft-contact-label {
    font-family: 'Barlow Condensed', sans-serif;
    font-size: 0.57rem;
    font-weight: 700;
    letter-spacing: 0.22em;
    text-transform: uppercase;
    color: rgba(255,255,255,0.22);
    line-height: 1;
  }
  .ft-contact-value {
    font-family: 'Barlow', sans-serif;
    font-size: 0.83rem;
    line-height: 1.5;
  }

  /* â”€â”€ Bottom bar â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .ft-bottom {
    position: relative;
    z-index: 1;
    max-width: 1280px;
    margin: 0 auto;
    padding: 1rem 1.5rem 1.25rem;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 0.75rem;
    border-top: 1px solid rgba(255,255,255,0.05);
  }
  .ft-copy {
    font-family: 'Barlow', sans-serif;
    font-size: 0.72rem;
    color: rgba(255,255,255,0.18);
  }
  .ft-legal {
    display: flex;
    align-items: center;
    gap: 1.4rem;
  }
  .ft-legal a {
    font-family: 'Barlow Condensed', sans-serif;
    font-size: 0.68rem;
    font-weight: 700;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    color: rgba(255,255,255,0.18);
    transition: color 0.2s;
    text-decoration: none;
  }
  .ft-legal a:hover { color: var(--red); }
</style>

